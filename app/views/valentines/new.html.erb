<div class='form'>
  <%= form_for @valentine do |f| %>

<div class='errors'>
  <% if @valentine.errors.any? %>
    <% @valentine.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

  <div class='from'>
    <%= f.label "From" %>
  </div>

  <div class='from-text'>
    <%= f.text_field :from %>
  </div>

  <div class='message'>
    <%= f.label "Message" %>
  </div>

  <div class='message-text'>
    <%= f.text_area :message, height: "76", width: "182" %>
  </div>

    <br>

  <div class='button'>
    <%= f.submit "Send the Love" %>
  </div>

  <% end %>
</div>
